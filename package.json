{
  "name": "grimoirejs-math",
  "version": "1.12.0",
  "description": "The basement library for math of grimoire.js",
  "main": "./ref/index.js",
  "typings": "./ref/index.d.ts",
  "files": [
    "ref",
    "register",
    "src"
  ],
  "keywords": [
    "grimoirejs",
    "grimoire"
  ],
  "dependencies": {
    "gl-matrix": "^2.3.2"
  },
  "devDependencies": {
    "ava": "^0.19.0",
    "babel-cli": "^6.24.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-2": "^6.13.0",
    "condition-circle": "^1.5.0",
    "grimoirejs": "^0.15.0",
    "grimoirejs-cauldron": "^2.2.4",
    "semantic-release": "^6.3.2",
    "ts-loader": "^2.0.3",
    "typedoc": "^0.5.10",
    "typescript": "^2.2.2",
    "webpack": "^2.3.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GrimoireGL/grimoirejs-math.git"
  },
  "scripts": {
    "test": "tsc --outDir ./lib && babel ./lib --presets es2015  --plugins transform-runtime --out-dir ./lib-es5 && babel ./test --presets es2015  --plugins transform-runtime --out-dir ./test-es5 && ava ./test-es5/**/*Test.js --verbose ",
    "prepublish": "npm run build -- --env.prod&& npm test",
    "start": "webpack --progress --watch",
    "prestart": "npm run prebuild",
    "build": "webpack --progress",
    "prebuild": "cauldron generate-exposure --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "postbuild": "cauldron generate-reference --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "doc": "typedoc --out ./docs/ --options typedoc.json  ./tsconfig.json"
  },
  "license": "MIT",
  "release": {
    "verifyConditions": "condition-circle"
  }
}
